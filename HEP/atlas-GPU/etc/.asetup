[defaults]

# Force asetup to use the CentOS 7 platform, in case it would get confused.
os = centos7
# Pick up GCC from the installation inside the image.

# Pick up CMake from inside the image, with the specified version. (In case the
# software release in use would prefer a different version.)
cmakearea = /opt/cmake
cmakeversion = 3.21.3

